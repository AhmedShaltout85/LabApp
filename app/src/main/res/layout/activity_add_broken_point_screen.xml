            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:background="@color/ic_launcher_background"
                android:text="@string/y_long"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/yBrokenTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_button_txt"
                android:textColor="@color/text"
                android:textSize="13sp"


                />
        </LinearLayout>


        <Button
            android:id="@+id/addNewBrokenPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_button_blue"
            android:onClick="addNewBrokenPoint"
            android:text="@string/save_sample_details"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="27sp"


            />

    </LinearLayout>
</ScrollView>

