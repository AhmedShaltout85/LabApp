<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/addLabCode"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/rounded_button_txt"
            android:padding="3dp"
            android:textColor="@color/text"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/addBreakId"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/rounded_button_txt"
            android:hint="@string/enter_break_id"
            android:inputType="number"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="15sp" />

        <Button
            android:id="@+id/selectBreakDate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight=".3"
            android:background="@drawable/rounded_button_blue"
            android:drawableEnd="@drawable/calendar"
            android:padding="3dp"
            android:text="@string/select_date"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/refreshTrackBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button_blue"
        android:drawableEnd="@drawable/refresh_locs"
        android:padding="2dp"
        android:text="@string/refresh_locs_track"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/displayMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.TrackBreakLocDisplayInMapsActivity" />

